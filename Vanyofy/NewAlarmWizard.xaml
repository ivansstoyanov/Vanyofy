<UserControl x:Class="Vanyofy.NewAlarmWizard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vanyofy"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="480">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="405" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBlock HorizontalAlignment="Left"  FontSize="22" Padding="6,0" Foreground="#eee">Set Name</TextBlock>
            <TextBox HorizontalAlignment="Stretch" FontSize="22" Padding="6,0" Foreground="#eee" Background="Orange" />
        </StackPanel>

        <StackPanel Grid.Column="1">
            <Button x:Name="Next" Style="{StaticResource InformButton}" Width="30" Height="70" >
                <Grid>
                    <Line Stroke="Black" X1="0" Y1="0" X2="20" Y2="25" StrokeThickness="3" />
                    <Line Stroke="Black" X1="20" Y1="25" X2="0" Y2="50" StrokeThickness="3" />
                </Grid>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
